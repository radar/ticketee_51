<header>
  <div class="row">
    <div class="col">
      <h1>Projects</h1>
    </div>

    <div class="col actions">
      <ul>
        <li>
          <%= link_to "New Project", new_project_path, class: "new" %>
        </li>
      </ul>
    </div>
  </div>
</header>

<div id="projects">
  <% @projects.each do |project| %>
    <h2><%= link_to project.name, project %></h2>
    <p><%= project.description %></p>
  <% end %>
</div>
